<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEditHiddenDisabilityActivity"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_text_disability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/disability"
        android:inputType="text"
        android:autofillHints="" tools:targetApi="o" />

    <EditText
    android:id="@+id/edit_text_specialist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/specialist"
    android:inputType="text"
        android:importantForAutofill="no" />


    <EditText
    android:id="@+id/edit_text_treatment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/treatment"
    android:inputType="text"
        android:autofillHints="" tools:targetApi="o" />

    <EditText
        android:id="@+id/edit_text_note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/note_title1"
        android:importantForAutofill="no"
        android:inputType="text" />

    <EditText
        android:id="@+id/edit_text_note_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/note_description1"
        android:inputType="textMultiLine"
        android:autofillHints="" tools:targetApi="o" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/priority1"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <NumberPicker
        android:id="@+id/number_picker_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>